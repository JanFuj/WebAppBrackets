@model TestWebAppCoolName.Models.TutorialCategory

@{
    ViewBag.Title = "New Tutorial Category";
}

<main class="main">



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h3>Vytvořit novou kategorii tutorialu</h3>
        <div>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="form-item">
                @Html.LabelFor(model => model.Name)

                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            </p>
            <p class="form-item">
                @Html.LabelFor(m => m.UrlTitle)
                @Html.TextBoxFor(m => m.UrlTitle)
                @Html.ValidationMessageFor(m => m.UrlTitle)
            </p>
            <p>
                <button type="submit" id="save">Vytvořit</button>

            </p>
        </div>
    }


</main>