@model IEnumerable<TestWebAppCoolName.Models.Person>

@{
    ViewBag.Title = "Admin Lidi";
}

<main>



    <p>
        @Html.ActionLink("Vytvořit", "NewPerson", null, new { @class = "link--gradient" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
             
                <td>
                    @Html.ActionLink("Upravit", "EditPerson", new { id = item.Id }, new { @class = "link--gradient" }) |
                    @Html.ActionLink("Smazat", "DeletePerson", new { id = item.Id }, new { @class = "link--gradient" })
                </td>
            </tr>
        }

    </table>
</main>
