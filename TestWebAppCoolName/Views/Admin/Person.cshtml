@model IEnumerable<TestWebAppCoolName.Models.Person>

@{
    ViewBag.Title = "Admin Lidi";
}

<main>


    <h2>Lidi</h2>

    <p>
        @Html.ActionLink("Create New", "NewPerson")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
             
                <td>
                    @Html.ActionLink("Edit", "EditPerson", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeletePerson", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</main>
