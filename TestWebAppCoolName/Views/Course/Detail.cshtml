@model TestWebAppCoolName.Controllers.CourseViewModel

@{
    ViewBag.Title = Model.Course.Name;
}


<body class="body body-course body--@Model.Course.Modificator">
    <header class="header header--course header--up-top" id="site-header">
        <nav class="nav">
            <a class="site-branding" href="@Url.Action("Index","Home")">
                <div class="site-logo">
                    <svg width="128px" height="128px" viewBox="0 0 128 128" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <linearGradient id="gradient-logo" x2="0" y2="2"><stop offset="0%" stop-color="var(--clr-primary)" /><stop offset="100%" stop-color="var(--clr-secondary)" /></linearGradient>
                        <path d="M50.2916265,15.1816557 C53.2237995,10.1192138 58.641442,7 64.5044262,7 C70.3674104,7 75.7850529,10.1192138 78.7172259,15.1816557 C92.1959609,38.4596546 112.335754,73.2435736 125.804956,96.505277 C128.731681,101.558213 128.731681,107.783061 125.804956,112.83464 C122.879592,117.887576 117.474207,121 111.622118,121 C84.6564765,121 44.3237759,121 17.3649439,121 C11.5183026,121 6.11564095,117.890292 3.19300122,112.841429 C0.268999593,107.792567 0.268999593,101.573151 3.19300122,96.5242883 C16.662203,73.2612269 36.8101676,38.4664443 50.2916265,15.1816557 Z"></path>
                    </svg>
                </div><h1 class="h6 site-name link--gradient">Cool Name</h1>
            </a>
            <ul class="nav__list">
                <li class="nav__item"><a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Home")#courses">Kurzy</a></li>
                <li class="nav__item"><a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Blog",new{title = "index"})">Blog</a></li>
                <li class="nav__item"><a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Home")#contact">Kontakt</a></li>
            </ul>
        </nav>
    </header>

    <main class="main">

        <div class="intro intro--course">
            <div class="course-image"><svg viewBox="0 0 128 128" role="img"><linearGradient id="gradient-@Model.Course.Modificator" x2="0" y2="1"><stop offset="0%" stop-color="var(--course-card-bg-1)" /><stop offset="100%" stop-color="var(--course-card-bg-2)" /></linearGradient>@Html.Raw(Model.Course.Svg)</svg></div>
            <div class="course-texts">
                <h1 class="course-title">@Model.Course.Name</h1>
                <p class="h4 course-desc">@Model.Course.Description</p>
            </div>
            <div class="banner banner--course">
                <div class="banner__top"></div>
                <div class="banner__bottom"></div>
                <div class="banner__content-wrapper">
                    <div class="banner__content">
                        <p>
                            <div id="editorWillLearn"></div>
                        </p>

                    </div>
                </div>
            </div>
        </div>
        <article class="course">
            <p>
                <div id="editorBody"></div>
            </p>


            <form id="Form" class="reg-form" action="@Url.Action("SendEmail","Course")" method="post">
                <h2 class="h4 reg-form__title">Registrace</h2>
                <div class="reg-form__content">

                    @Html.TextBoxFor(m => m.FormModel.Name, new { placeholder = "Jméno" })
                    @Html.ValidationMessageFor(m => m.FormModel.Name)
                    @Html.TextBoxFor(m => m.FormModel.Surname, new { placeholder = "Příjmení" })
                    @Html.ValidationMessageFor(m => m.FormModel.Surname)
                    @Html.TextBoxFor(m => m.FormModel.Email, new { placeholder = "E-mail" })
                    @Html.ValidationMessageFor(m => m.FormModel.Email)
                    @Html.HiddenFor(m => m.Course.UrlTitle)
                    @Html.AntiForgeryToken()
                    <button class="reg-form__button" type="submit">Počítejte se mnou!</button>
                </div>
            </form>



        </article>
    </main>
    <footer class="footer">
        <hr>
        <nav class="nav" role="navigation">
            <ul class="nav__list">

                <li class="nav__item">
                    <a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Home")#courses">Kurzy</a>
                </li>
                <li class="nav__item"><a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Blog",new{title = "index"})">Blog</a></li>
                <li class="nav__item"><a class="nav__link link--gradient link--border-hover" href="@Url.Action("Index","Home")#contact">Kontakt</a></li>
            </ul>
        </nav>
        <p><small>&copy; <span id="copyright-year">@DateTime.Now.Year</span> Cool Name</small></p>
    </footer>
</body>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

    $(document).ready(function () {
            var anchor = document.getElementById('@Model.Section');
                anchor.scrollIntoView(true);
        });



    let quill = new Quill('#editorWillLearn',
        {

            });
    let quillBody = new Quill('#editorBody',
        {

        });

    $(document).ready(function () {
        console.log()

        quill.setContents(@Html.Raw(Model.Course.WillLearn))
        quill.enable(false);

        quillBody.setContents(@Html.Raw(Model.Course.Body))
        quillBody.enable(false);
    });
    </script>
}


